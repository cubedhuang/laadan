@import 'tailwindcss/base';
@import 'fonts.postcss';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';

@layer base {
	body {
		@apply bg-purple-50;
	}
}

@layer components {
	.wrapper {
		@apply mx-auto max-w-screen-lg px-8;
	}

	.box {
		@apply rounded-xl bg-white border-2 border-purple-200;
	}

	.input {
		@apply box focus:border-purple-400
			transition outline-none;
	}

	.interactive {
		@apply box cursor-pointer hv:border-purple-400
			transition outline-none;
	}
}
